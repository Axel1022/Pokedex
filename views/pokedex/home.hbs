{{#if hasPokemon}}
  <div class="m-3">
    <div class="row">
      <div class="d-flex justify-content-between align-items-center w-100">
        <h1 class="me-3">Lista de Pokemones</h1>
        <form
          method="post"
          action="/buscarPokemon"
          class="d-flex align-items-center"
        >
          <div class="form-group me-3">
            <input
              type="text"
              class="form-control"
              id="info"
              name="info"
              placeholder="Pokemon"
            />
          </div>
          <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
      </div>

      {{#each Pokemones}}
        <div class="col-12 col-sm-3 mt-3 p-3">
          <div
            class="card shadow"
            style="border-top-left-radius: 10px; border-top-right-radius: 10px;"
          >
            <h5
              class="card-title text-center mt-3"
              style="max-width: 500px;"
            >{{this.Namepokemon}}</h5>
            <img
              src="{{this.UrlImg}}"
              class="card-img-top img-fluid"
              style="height: 320px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;"
              alt="{{this.Namepokemon}}"
            />
            <h6 class="text-center m-4">{{this.Tipo}} | {{this.Region}}</h6>

          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <div class="container">
    <h1>No se encontraron pokemones.</h1>
    <a href="/modPokemones" class="btn btn-success">+ Nuevo g√©nero</a>
  </div>
{{/if}}
